<UserControl x:Class="WPF_Successor_001_to_Vahren.UserControl015_Unit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Successor_001_to_Vahren"
             mc:Ignorable="d" 
             Height="640" Width="480">
    <Canvas
            MouseLeftButtonDown="win_MouseLeftButtonDown"
            MouseRightButtonUp="btnClose_Click"
            >
        <Border Height="640" Width="480" Background="#454545" BorderBrush="Black" BorderThickness="5" />

        <Image Margin="10,10,0,0" Height="32" Width="32" Name="imgUnit" />

        <Image Stretch="Fill" Margin="400,10,0,0" Height="32" Width="32" Name="imgFlag" />
        <Button x:Name="btnClose" Width="35" Height="35" Margin="435,10,0,0" Padding="0,-6,0,0" FontSize="30" Click="btnClose_Click">×</Button>

        <Image Margin="370,530,0,0" Height="96" Width="96" Name="imgFace" />

        <StackPanel Margin="100,10,0,0">
            <Label FontSize="23" Foreground="White" Content="ユニットの名前" Name="lblNameUnit" />
            <Label FontSize="20" Foreground="White" Content="クラス" Name="lblClass" />
            <Label FontSize="15" Foreground="White" Content="経験値" Name="lblExp" />

        </StackPanel>


        <StackPanel Orientation="Horizontal" Margin="10,590,0,0">
            <Button x:Name="btnDismiss" Width="70" Height="35" Margin="0,0,5,0" FontSize="20" Content="解雇"
                    PreviewMouseDown="Raise_ZOrder"
                    MouseRightButtonUp="Disable_MouseEvent"
                    />
            <Button x:Name="btnMercenary" Width="70" Height="35" Margin="0,0,5,0" FontSize="20" Content="雇用"
                    Click="btnMercenary_Click"
                    PreviewMouseDown="Raise_ZOrder"
                    MouseRightButtonUp="Disable_MouseEvent"
                    />
            <Button x:Name="btnItem" Width="80" Height="35" Margin="0,0,5,0" FontSize="20" Content="アイテム"
                    PreviewMouseDown="Raise_ZOrder"
                    MouseRightButtonUp="Disable_MouseEvent"
                    />
        </StackPanel>

    </Canvas>
</UserControl>
